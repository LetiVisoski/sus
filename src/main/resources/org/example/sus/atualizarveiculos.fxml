<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sus.HelloController">
   <children>
      <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <!-- Botão Voltar -->
            <Button fx:id="voltarVeiculo" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#voltarVeiculo" text="Voltar" />

            <!-- Título -->
            <Label fx:id="veiculoLabel" layoutX="226.0" layoutY="27.0" text="Atualizar Veículos">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>

            <!-- Labels e Campos de Texto -->
            <Label fx:id="idveiculoLabel" layoutX="14.0" layoutY="96.0" text="Digite o ID do veículo que deseja atualizar :">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="tipoLabel" layoutX="14.0" layoutY="163.0" text="Tipo :">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="placaLabel" layoutX="11.0" layoutY="220.0" text="Placa :">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="lugarLabel" layoutX="14.0" layoutY="279.0" text="Lugares :">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>

            <!-- Campos de Texto -->
            <TextField fx:id="idveiculoTextField" layoutX="414.0" layoutY="97.0" />
            <TextField fx:id="tipoTextField" layoutX="141.0" layoutY="164.0" />
            <TextField fx:id="placaTextField" layoutX="141.0" layoutY="221.0" />
            <TextField fx:id="lugarTextField" layoutX="141.0" layoutY="280.0" />

            <!-- Botão Atualizar -->
            <Button layoutX="180.0" layoutY="335.0" mnemonicParsing="false" onAction="#atualizarVeiculo" text="Atualizar">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</VBox>
