<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22"
      fx:controller="org.example.sus.HelloController" prefHeight="400.0" prefWidth="640.0">

    <children>
        <AnchorPane prefHeight="400.0" prefWidth="640.0">
            <children>
                <!-- Campo para usuário -->
                <Label fx:id="userLabel" layoutX="225.0" layoutY="63.0" text="Usuário:"/>
                <TextField fx:id="userTextField" layoutX="300.0" layoutY="60.0" prefWidth="200.0"/>

                <!-- Campo para senha -->
                <Label fx:id="senhaLabel" layoutX="225.0" layoutY="120.0" text="Senha:"/>
                <TextField fx:id="senhaTextField" layoutX="300.0" layoutY="115.0" prefWidth="200.0"/>

                <!-- Botão "Avançar" -->
                <Button fx:id="avancarButton" layoutX="275.0" layoutY="180.0" text="Avançar" onAction="#avanca"/>
            </children>
        </AnchorPane>
    </children>
</VBox>
